import numpy as np
import csv

# ğŸ“Œ ê¸°ë³¸ NACA 2412 ì¢Œí‘œ (Chord = 1 ê¸°ì¤€)
naca_2412_coords = np.array([
    [0.0000, 0.0000], [0.0250, 0.0345], [0.0500, 0.0582], 
    [0.1000, 0.0846], [0.2000, 0.1204], [0.3000, 0.1411], 
    [0.5000, 0.1513], [0.7000, 0.1266], [0.9000, 0.0636], 
    [1.0000, 0.0000]
])

# âœ… ë³€í™˜í•  Chord ê¸¸ì´ ì„¤ì • (ì˜ˆ: Root Chord = 1.5m)
chord_length = 1.5
scaled_coords = naca_2412_coords * chord_length

# ğŸ“Œ CSV íŒŒì¼ë¡œ ì €ì¥
csv_filename = "naca_2412_scaled.csv"
with open(csv_filename, mode="w", newline="") as file:
    writer = csv.writer(file)
    writer.writerow(["X", "Y"])  # í—¤ë” ì¶”ê°€
    writer.writerows(scaled_coords)

print(f"âœ… CSV íŒŒì¼ ì €ì¥ ì™„ë£Œ: {csv_filename}")
